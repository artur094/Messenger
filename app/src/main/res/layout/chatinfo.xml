<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >

    <!--<de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->

    <RelativeLayout
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:gravity="center"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/chat_info_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle"
            />

        <TextView
            android:id="@+id/chat_info_first_char"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dp"
            android:text="U"
            android:textColor="@color/circle_text"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/chat_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/chat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uknown"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/chat_last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="There are no messages"
            />

        <TextView
            android:id="@+id/chat_date_last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today at 13.10"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>